<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="css/styles.css">
</head>
<body>
  
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a class="nav-link" href="#">Job<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="./index.html">Buyer</a>
            </li>
          </ul>
        </div>
      </nav>
    
    <header class="jumbotron">
        <div class="container">
            <div class="row row-header">
                <div class="col-12 col-sm-6">
                    <h1>Let Employers</h1>
                    <h2>Find you</h2>
                </div>
                <div class="col-12 col-sm align-self-center">
                    <img src="" class="img-fluid">
                </div>
            </div>
        </div>
    </header>
      
    <div class="container">

<div class="container">
<div class="row">
    <% jobs.forEach(function(job){ %>
    <div class="col col-md-6 col-12">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top img-fluid" src="./vino-li-tQyuOdG159o-unsplash.jpg" alt="Card image cap">
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Comapany: <%= job.comapany %></li>
                    <li class="list-group-item">Location: <%= job.location %></li>
                    <li class="list-group-item">Address: <%= job.address %></li>
                    <li class="list-group-item">ContactNo: <%= job.contactNo %></li>
                    <li class="list-group-item">Email: <%= job.email %></li>
                    <li class="list-group-item">Title: <%= job.title %></li>
                    <li class="list-group-item">Salary: <%= job.salary %></li>
                    <li class="list-group-item">requirement: <%= job.requirements %></li>
                    <li class="list-group-item">Description: <%= job.description %></li>
                  </ul>
                  <div class="card-body">
                    <a href="/jobs/<%= job._id %>/editjob" class="card-link">Click Here To Edit</a>
                    <a href="" class="card-link">
                        <form action="/jobs/<%= job._id %>?_method=DELETE" method="POST">
                        <input type="submit" value="REMOVE" class="btn btn-outline-primary"></input>
                      </form> </a>
                  </div>
            </div>
          </div>
    </div>
    <% }) %>
</div>
</div>
</body>
</html>