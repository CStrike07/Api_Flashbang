<!DOCTYPE html>
<html lang="en">
<head>
  <title>My Jobs Add</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="css/styles.css">
</head>
<body>
  
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
            <li class="nav-item ">
              <a class="nav-link" href="/index">Buyer<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/alljobs">Job</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/profile">Profile</a>
      </ul>
    </div>
  </nav>
    
    <header class="jumbotron">
        <div class="container">
            <div class="row row-header">
                <div class="col-12 col-sm-6">
                    <h1>Let Employers</h1>
                    <h2>Find you</h2>
                </div>
                <div class="col-12 col-sm align-self-center">
                    <img src="" class="img-fluid">
                </div>
            </div>
        </div>
    </header>
      
    <div class="container">

<div class="container">
<div class="row">
    <% jobs.forEach(function(job){ %>
    <div class="col col-md-6 col-12">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top img-fluid" src="./vino-li-tQyuOdG159o-unsplash.jpg" alt="Card image cap">
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Comapany: <%= job.comapany %></li>
                    <li class="list-group-item">Location: <%= job.location %></li>
                    <li class="list-group-item">Address: <%= job.address %></li>
                    <li class="list-group-item">ContactNo: <%= job.contactNo %></li>
                    <li class="list-group-item">Email: <%= job.email %></li>
                    <li class="list-group-item">Title: <%= job.title %></li>
                    <li class="list-group-item">Salary: <%= job.salary %></li>
                    <li class="list-group-item">requirement: <%= job.requirements %></li>
                    <li class="list-group-item">Description: <%= job.description %></li>
                  </ul>
                  <div class="card-body">
                    <a href="<%= job.applyLink %>" class="card-link">Click Here To Apply</a>
                  </div>
            </div>
          </div>
    </div>
    <% }) %>
</div>
 

  
</div>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

</body>
</html>
