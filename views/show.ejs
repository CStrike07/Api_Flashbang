    <header class="jumbotron">
        <div class="container">
            <div class="row row-header">
                <div class="col-12 col-sm-6">
                    <h1>Profile</h1>
                    
                </div>
                <div class="col-12 col-sm align-self-center">
                    <img src="" class="img-fluid">
                </div>
            </div>
        </div>
    </header>
      
    
    

<div class="container">
<div class="row">
    <div class="col col-12">
        <div class="card" >
            <img class="card-img-top img-fluid" src="<%= user.image %>" alt="Card image cap">
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Name:    <%= user.fullName %></li>
                    <li class="list-group-item">Job Title:   <%= user.fullName %></li>
                    <li class="list-group-item">Address:    <%= user.address %></li>
                    <li class="list-group-item">ContactNo:  <%= user.contact %></li>
                    <li class="list-group-item">Email:      <%= user.fullName %></li>
                    <li class="list-group-item">whatsapp no.:      <%= user.whatsapp %></li>
                    <li class="list-group-item">Skills:     <%= user.skills %></li>
                    <li class="list-group-item">Hourly Cost:<%= user.costHour %></li>
                    <li class="list-group-item">experience:<%= user.experience %> </li>
                  </ul>
            </div>
          </div>
    </div>
    
</div>
 

  
</div>

